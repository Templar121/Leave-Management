{
  "info": {
    "name": "Leave Management System API",
    "_postman_id": "12345-abcde",
    "description": "Postman collection for Leave Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Login (HR)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/x-www-form-urlencoded"
          }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/auth/login",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["auth", "login"]
        },
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            { "key": "username", "value": "admin", "type": "text" },
            { "key": "password", "value": "secret123", "type": "text" }
          ]
        }
      }
    },
    {
      "name": "Employee - Add",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/employees/",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["employees", ""]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Alice\",\n  \"email\": \"alice@example.com\",\n  \"department\": \"Engineering\",\n  \"joining_date\": \"2025-01-10\"\n}"
        }
      }
    },
    {
      "name": "Employee - Get by ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/employees/1",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["employees", "1"]
        }
      }
    },
    {
      "name": "Leave - Apply",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/leaves/1",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["leaves", "1"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"start_date\": \"2025-01-15\",\n  \"end_date\": \"2025-01-17\"\n}"
        }
      }
    },
    {
      "name": "Leave - Approve/Reject",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/leaves/1/status?status=approved",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["leaves", "1", "status"],
          "query": [
            { "key": "status", "value": "approved" }
          ]
        }
      }
    },
    {
      "name": "Leave - Balance",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://127.0.0.1:8000/leaves/balance/1",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["leaves", "balance", "1"]
        }
      }
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://127.0.0.1:8000/health/",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["health", ""]
        }
      }
    }
  ],
